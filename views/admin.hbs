    <script type="text/javascript">
        $(document).ready(function(){

            //Hide other days on click
            $('#DaySelector').find("a").click(()=>{
                $('#DaySelector').collapse('hide');
            })

            $('[data-toggle="tooltip"]').tooltip(); //initialize tooltip for Add Show movieID

            /*Populate values for Dropdown on Add Show*/
            let days = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"];
            let times = ["09:15 - 10:45", "11:00 - 12:30", "12:45 - 14:15", "1430 - 1600", "1615 - 1745", "1800 - 1930", "1945 - 2115"];

            /*for(let i = 1; i <= 7; i++)
            {
                let x = document.createElement("option");
                x.setAttribute("value", i);
                $(x).text(days[i-1]);
                $("#showMovieDate").append(x);
            }*/

            $('#datePicker').datetimepicker({
                format: 'L'
            });

            for(let i = 0; i < times.length; i++){
                let x = document.createElement("option");
                x.setAttribute("value", times[i]);
                $(x).text(times[i]);
                $("#showMovieTime").append(x);
            }

            var day = 1;
            var y = 0;
            $("#addShow").hide();
            
            $("#add").click(function(){
                if (y == 0){
                    $("#addShow").show(500);
                    y++;
                }
                else {
                    $("#addShow").hide(500);
                    y--;
                }
            });

            $(".nav-item").click(function(){
                $("#addShow").hide();
            });
        });

        function deleteRow(movieID){
            $('#'+ movieID).remove();
            { $.ajax({
                url: '/admin/removeShow',
                method: 'DELETE',
                data: {
                    movieID: movieID
                }
            })
            .done(function() {
                console.log('deleted');
                window.location.reload(true);
            })};
        }

    </script>

