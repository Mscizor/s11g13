    <script type="text/javascript">
        $(document).ready(function(){
            var day = 1;
            var y = 0;
            $("#addShow").hide();
            
            $("#add").click(function(){
                if (y == 0){
                    $("#addShow").show(500);
                    y++;
                }
                else {
                    $("#addShow").hide(500);
                    y--;
                }
            });

            $(".nav-item").click(function(){
                $("#addShow").hide();
            });
        });
