</head>
<body>
    {{>header}}

    <div class="container mt-4 p-2">
        <ul class="nav nav-tabs nav-justified" role="tablist">
            <li class="nav-item">
                <a class="nav-link text-danger" data-toggle="tab" role="tab" href="#Main">Movie List</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-danger" data-toggle="tab" role="tab" href="#Add">Add Movie/Show</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-danger" data-toggle="tab" role="tab" href="#EditRemove">Edit/Remove Showing</a>
            </li>
        </ul>
        <!-- Panel Contents -->
        <div class="tab-content border border-top-0">
            <div class="tab-pane fade container-fluid py-4 show active">
            <h3 class="text-danger">Admin Dashboard</h3>
            <hr>
            <h5>Welcome, {{username}}.</h6>
            <h6>Click on any tab to get started.</h6>
            </div>
            <!-- Staring Screen -->
            <div class="tab-pane fade container-fluid py-4" id="Main">
                <h3 class="text-danger">Movie List</h3>
                <hr>
                <div class="row justify-content-center">
                    <div class="card w-75">
                        <table class="table table-sm table-striped text-center mb-0">
                            <tr>
                                <th>Movie Title</th><th>Movie ID</th>
                            </tr>
                            {{#each movies}}
                                <tr><td>{{title}}</td><td>{{_id}}</td></tr>
                            {{/each}}
                        </table>
                    </div>
                </div>

            </div>

            <!-- Adding movies or shows -->
            <div class="tab-pane fade container-fluid py-4" id="Add">
